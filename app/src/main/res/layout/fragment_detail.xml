<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:background="@color/qmui_config_color_white"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_marginBottom="74dp"
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/app_color_blue"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAmount"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    tools:text="4000~33333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                  android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"

                        android:textColor="@color/white"
                        android:text="额度范围"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:text="  (元)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </LinearLayout>

    </RelativeLayout>






    <LinearLayout
        android:background="@color/detail_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">



            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:id="@+id/tv_lilv"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_rate_type"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="6dp"
                android:text="年利率"/>

        </LinearLayout>
        
        <View
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider_bg"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_periods"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
             android:layout_marginBottom="6dp"
                android:text="期数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <View
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider_bg"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_speed"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
              android:layout_marginBottom="6dp"
                android:text="到账时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>









    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:gravity="center_vertical"
           
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <TextView
                android:drawablePadding="12dp"
                android:drawableLeft="@mipmap/section_head"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="资质要求"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            
            <TextView
                android:visibility="gone"
                android:id="@+id/tvLook"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_apply"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:text="查看产品介绍"
                android:layout_width="120dp"
                android:layout_height="30dp"/>
            
            
            
        </RelativeLayout>

       

        <View

            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdddddd"/>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        


    </LinearLayout>












    </LinearLayout>

    </ScrollView>



        <com.qmuiteam.qmui.widget.QMUITopBarLayout
            android:id="@+id/topbar"
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView

                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:layout_gravity="right"

                android:layout_centerVertical="true"
                android:id="@+id/favorite"
                android:src="@mipmap/favorite_dark"
                android:layout_width="24dp"
                android:layout_height="24dp"/>

        </com.qmuiteam.qmui.widget.QMUITopBarLayout>








    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/share"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/detail_bg"
            android:textSize="17sp"
            android:text="立即推广"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/login"
            android:background="@color/app_color_blue"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="17sp"
            android:text="立即申请"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>








</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>