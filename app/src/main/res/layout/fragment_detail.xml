<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:background="@color/qmui_config_color_white"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/app_color_blue"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvAmount"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    tools:text="4000~33333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                  android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="16dp"
                        android:textSize="18sp"

                        android:textColor="@color/white"
                        android:text="额度范围"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_gravity="bottom"
                        android:textColor="@color/white"
                        android:text="  (元)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </LinearLayout>


            </LinearLayout>

    </RelativeLayout>






    <LinearLayout
        android:background="#416099"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">



            <TextView
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="6dp"
                android:textColor="@color/white"
                android:id="@+id/tv_lilv"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="6dp"
                android:text="年利率(%)"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_periods"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
             android:layout_marginBottom="6dp"
                android:text="期数(月)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:id="@+id/tv_speed"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/white"
              android:layout_marginBottom="6dp"
                android:text="到账时间(小时)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>




        <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:id="@+id/tv_range"
                    android:textStyle="bold"

                    tools:text="额度范围：0.00-0.00元"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="16dp"
                    android:padding="2dp"
                    android:id="@+id/tv_label"
                    android:textColor="@color/red"
                    android:paddingLeft="32dp"
                    tools:text="代发工资，更易办理"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/favorite"
                    android:src="@mipmap/favorite_dark"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <ImageView
                    android:id="@+id/share"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/share"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>


            </LinearLayout>



        </LinearLayout>




        <View
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:padding="4dp"
            android:textStyle="bold"
            android:text="资质要求"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View

            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdddddd"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>



    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:layout_marginTop="24dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        app:qmui_borderColor="@color/app_color_blue_2"
        android:textColor="@color/qmui_config_color_white"
        app:qmui_backgroundColor="@color/app_color_blue_2"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="26dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"

        android:text="立即申请"
        app:qmui_isRadiusAdjustBounds="true"/>






    </LinearLayout>

    </ScrollView>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.qmuiteam.qmui.widget.QMUITopBarLayout>








</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>