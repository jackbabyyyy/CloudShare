<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
 android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/qmui_config_color_white"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ScrollView
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:fitsSystemWindows="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:paddingTop="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <FrameLayout


        android:background="@mipmap/arc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_gravity="bottom|center"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="(单位元)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvAmount"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textSize="28sp"
                android:textColor="@color/red"
                tools:text="2000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="可借额度"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>




        </LinearLayout>


    </FrameLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="年利率(%)"/>

            <TextView
                android:id="@+id/tv_lilv"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="6dp"
                android:text="贷款期限(月)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_periods"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:padding="6dp"
                android:text="放款时效(小时)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_speed"
                tools:text="5.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/divider_bg"
        android:layout_width="match_parent"
        android:layout_height="2px"/>


   <TextView
       android:layout_marginLeft="16dp"
       android:padding="2dp"
       android:id="@+id/tv_range"
       android:textStyle="bold"

       tools:text="额度范围：0.00-0.00万元"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="16dp"
        android:padding="2dp"
        android:id="@+id/tv_label"
        android:textColor="@color/red"
        android:paddingLeft="32dp"
        tools:text="代发工资，更易办理"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


        <View
            android:background="#f1f1f1"
            android:layout_width="match_parent"
            android:layout_height="6dp"/>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:padding="4dp"
            android:textStyle="bold"
            android:text="产品信息"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View

            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffdddddd"/>


        <TextView
            android:id="@+id/tv_name"
            android:padding="4dp"
            android:text="项目名称"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_num"
            android:padding="4dp"
            android:text="项目编号"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="4dp"
            android:text="开通地区:全国"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="4dp"
            android:text="征信要求：xxxxxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:padding="4dp"
            android:text="项目介绍：xxxxxx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:layout_marginTop="24dp"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="48dp"
        app:qmui_borderColor="@color/app_color_blue_2"
        android:textColor="@color/qmui_config_color_white"
        app:qmui_backgroundColor="@color/app_color_blue_2"
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="26dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"

        android:text="立即申请"
        app:qmui_isRadiusAdjustBounds="true"/>






    </LinearLayout>

    </ScrollView>

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/topbar"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.qmuiteam.qmui.widget.QMUITopBarLayout>








</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>