<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="14dp"
        android:layout_marginLeft="11dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="52dp"
            android:layout_height="52dp"/>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="36dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16sp"
                android:id="@+id/tv_name"
                tools:text="sjfef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="6dp"
                android:background="@color/divider_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        </LinearLayout>

        <TextView
            android:layout_marginRight="12dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/bg_apply"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:id="@+id/tv_apply"
            android:text="申请"
            android:layout_width="66dp"
            android:layout_height="27dp"/>






    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:id="@+id/tv_money"
                tools:text="3000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="11sp"
                android:textColor="#888888"
                android:text="额度范围(万元)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"

            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="14sp"
                android:textColor="#FE5757"
                android:id="@+id/tv_lilv"
                tools:text="0.07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_rate_type"
                android:textSize="11sp"
                android:textColor="#888888"
                android:text="月利率(%)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="98%"
                android:textSize="14sp"
                android:textColor="#FE5757"
                android:id="@+id/tv_over"
                tools:text="0.07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="11sp"
                android:textColor="#888888"
                android:text="通过率"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>
    <RelativeLayout
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="11dp"
        android:layout_marginLeft="11dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
           android:paddingLeft="4dp"
           android:paddingRight="4dp"
            android:background="#ffebd4"
            android:textColor="#fb6620"
            android:textSize="12sp"
            android:id="@+id/bottom"
            android:text="利息低"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:background="#d4f8fd"
            android:id="@+id/bottom2"
            android:layout_marginLeft="16dp"
            android:textColor="#1993fc"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/bottom"
            android:text="通过率高"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="#888888"
            android:textSize="12sp"
            android:id="@+id/tv_body"
            android:layout_alignParentRight="true"
            tools:text="221人已借款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</LinearLayout>